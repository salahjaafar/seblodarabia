<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field_validation" version="2.5" method="upgrade">
	<name>plg_cck_field_validation_cintunisia</name>
	<author>Salah JAAFAR</author>
	<authorEmail>sebloadarabia@rn.tn</authorEmail>
	<authorUrl>https://seblodarabia.rn.tn</authorUrl>
	<copyright>Copyright (C) 2009 - 2023 SEBLODARABIA. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>August 2023</creationDate>
	<description>SEBLOD 3.x - Arabic validation plugin for SEBLOD - Visit https://seblodarabia.rn.tn/</description>
	<version>1.0.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="cintunisia">cintunisia.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_cintunisia.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_validation_cintunisia.sys.ini</language>
		<language tag="ar-AA">ar-AA/ar-AA.plg_cck_field_validation_cintunisia.ini</language>
		<language tag="ar-AA">ar-AA/ar-AA.plg_cck_field_validation_cintunisia.sys.ini</language>
	</languages>
	
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="alert" type="text" default="PLG_CCK_FIELD_VALIDATION_CINTUNISIA_ALERT" label="LIB_CCK_ALERT_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_ALERT_DESC" disabled="true" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_VALIDATION_GROUP_AJAX" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_VALIDATION_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_VALIDATION_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
